# Environment Configuration for SFT Brain iOS

# API Configuration
# Set to "true" to use mock data (standalone mode)
# Set to "false" to connect to real backend
NEXT_PUBLIC_USE_MOCK_DATA=true

# Backend API URL (only used when NEXT_PUBLIC_USE_MOCK_DATA=false)
# For development: http://localhost:3000
# For production: https://your-backend-api.com
NEXT_PUBLIC_API_BASE_URL=http://localhost:3000

# Google OAuth (only needed if using real backend)
# NEXT_PUBLIC_GOOGLE_CLIENT_ID=your_google_client_id_here

# App Configuration
NEXT_PUBLIC_APP_NAME=SFT Brain
NEXT_PUBLIC_APP_VERSION=1.0.0
